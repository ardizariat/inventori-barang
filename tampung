                            </tr>
                        </thead>
                        <tbody>
                            @foreach ($pb as $item)
                                <tr>
                                    <td width="5%">{{ $loop->iteration }}</td>
                                    <td>{{ $item->no_dokumen }}</td>
                                    <td>{{ $item->user->name }}</td>
